<h1>Enter new trip</h1>
<%= form_for @trip do |f| %>
  <div class="message">
    <% if @trip.errors.any? %>
	  <h2>Unable to save trip</h2>
	  <ul>
	  <% @trip.errors.full_messages.each do |msg| %>
	    <li><%= msg %>
	  <% end %>
	  </ul>
	<% end %>
  </div>

  <div class="field">
  <% if not Trip.find(:all).empty? %>
    <% id = Trip.last.id %>
  <% end %>
  
	<%= f.text_field :last_trip, :value => id %><br />
    <%= f.label :odo, "Odometer reading" %><br />
    <%= f.text_field :odo %><br />
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>