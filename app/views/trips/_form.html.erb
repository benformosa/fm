<%= form_for @trip do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if params[:car] %>
    <% @trip.car = Car.find(params[:car]) %>
  <% end %>

  <div class="field">
    <%= f.hidden_field :user, :value => current_user %>

    <%= f.label :car, "Car" %></br>
    <%= f.text_field :car, :value => @trip.car.id, readonly: true %><br />
  
    <%= f.label :last_trip, "Last trip ID" %></br>
    <%= f.text_field :last_trip, :value => Trip.where(car_id: @trip.car).last.id, readonly: true %><br />
    
    <label>Start odometer reading</label><br />
    <input type="text" readonly value="<%= Trip.where(car_id: @trip.car).last.odo %>" /><br />
    
    <%= f.label :odo, "End odometer reading" %><br />
    <%= f.text_field :odo %><br />
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
