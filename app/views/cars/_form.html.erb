<%= form_for @car do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %><br />

    <%# If this is not a new car (persisted?) and you are the cars owner or an admin %>
    <% if @car.persisted? && (current_user.is_admin || @car.user_id == current_user.id) %>
      <%= f.label :enable %><br />
      <%= f.check_box :enable %><br />
    <% end %>

    <% if current_user.is_admin? %>
      <%= f.label :fleet %><br />
      <%= f.check_box :fleet %><br />
    <% end %>

    <%= f.label :make %><br />
    <%= f.text_field :make %><br />

    <%= f.label :model %><br />
    <%= f.text_field :model %><br />

    <%= f.label :rego %><br />
    <%= f.text_field :rego %><br />

    <%= f.label :state %><br />
    <%= f.text_field :state %><br />

    <%= f.label :start_odo, "Initial Odometer reading" %><br />
    <%= f.text_field :start_odo %><br />

    <%= f.label :initial_location, "Initial location" %><br />
    <%= f.autocomplete_field :initial_location, autocomplete_trip_location_trips_path %><br />

  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
