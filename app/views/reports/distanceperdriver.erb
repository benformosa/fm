<% @object_name = 'Driver' %>

<%= render 'distanceheader.erb' %>

<% User.all.each do |object| %>
  <tr>
    <td><%= object.name %></td>
    <td class=numeric><%= Trip.get_stat(:trip_count, :user_id => object.id) %></td>
    <td class=numeric><%= Trip.get_stat(:business_distance, :user_id => object.id) %></td>
    <td class=numeric><%= Trip.get_stat(:personal_distance, :user_id => object.id) %></td>
    <td class=numeric><%= Trip.get_stat(:total_distance, :user_id => object.id) %></td>
  </tr>
<% end %>

<%= render 'distancefooter.erb' %>
